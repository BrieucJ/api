{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["../apps/backend/src/*"],
      "zod": ["../apps/client/node_modules/zod"]
    }
  },
  "references": [{ "path": "../apps/backend" }],
  "include": ["src"]
}
