{
  "private": true,
  "scripts": {
    "dev": "bun --cwd apps/backend dev & bun --cwd apps/worker dev & wait",
    "dev:backend": "bun --cwd apps/backend dev",
    "dev:worker": "bun --cwd apps/worker dev",
    "dev:client": "bun --cwd apps/client dev",
    "infra:deploy:lambda:staging": "bash infra/pulumi-run.sh lambda staging up",
    "infra:destroy:lambda:staging": "bash infra/pulumi-run.sh lambda staging destroy",
    "infra:destroy:worker:prod": "bash infra/pulumi-run.sh worker prod destroy",
    "infra:deploy:lambda:prod": "bash infra/pulumi-run.sh lambda prod up",
    "infra:destroy:lambda:prod": "bash infra/pulumi-run.sh lambda prod destroy",
    "infra:deploy:ecs:staging": "bash infra/pulumi-run.sh ecs staging up",
    "infra:destroy:ecs:staging": "bash infra/pulumi-run.sh ecs staging destroy",
    "infra:deploy:ecs:prod": "bash infra/pulumi-run.sh ecs prod up",
    "infra:destroy:ecs:prod": "bash infra/pulumi-run.sh ecs prod destroy",
    "infra:deploy:worker:prod": "bash infra/pulumi-run.sh worker prod up",
    "infra:deploy:client:prod": "bash infra/pulumi-run.sh client prod up"
  },
  "dependencies": {
    "@pulumi/aws": "^7.15.0",
    "@pulumi/command": "^1.1.3",
    "@pulumi/pulumi": "^3.213.0",
    "dotenv": "^17.2.3",
    "hono": "^4.10.8"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}