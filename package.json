{
  "private": true,
  "scripts": {
    "dev": "bun --cwd apps/backend dev & bun --cwd apps/worker dev & wait",
    "dev:backend": "bun --cwd apps/backend dev",
    "dev:worker": "bun --cwd apps/worker dev",
    "dev:client": "bun --cwd apps/client dev",
    "test": "bun run test:backend && bun run test:worker && bun run test:client",
    "test:backend": "bun --cwd apps/backend test",
    "test:worker": "bun --cwd apps/worker test",
    "test:client": "bun --cwd apps/client test",
    "test:coverage": "bun --cwd apps/backend test:coverage && bun --cwd apps/client test:coverage",
    "test:watch": "bun --cwd apps/backend test:watch",
    "infra:deploy:production": "bash infra/deploy.sh deploy production",
    "infra:deploy:staging": "bash infra/deploy.sh deploy staging",
    "infra:destroy:production": "bash infra/deploy.sh destroy production",
    "infra:destroy:staging": "bash infra/deploy.sh destroy staging",
    "infra:plan:production": "bash infra/deploy.sh plan production",
    "infra:plan:staging": "bash infra/deploy.sh plan staging"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "hono": "^4.10.8"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}